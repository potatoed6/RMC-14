<controls:MarineCommunicationsComputerWindow
    xmlns="https://spacestation14.io"
    xmlns:controls="clr-namespace:Content.Client._RMC14.Marines.Announce"
    xmlns:cc="clr-namespace:Content.Client.Administration.UI.CustomControls"
    Title="Наземна Операцiя"
    MinSize="400 350">
    <BoxContainer Orientation="Vertical" Margin="5">
        <BoxContainer Orientation="Horizontal">
            <Label Text="Об'єкт: " />
            <Label Name="PlanetName" Access="Public" />
        </BoxContainer>
        <BoxContainer Orientation="Horizontal">
            <Label Text="Операція: " />
            <Label Name="OperationName" Access="Public" />
        </BoxContainer>
        <cc:HSeparator Color="#4972A1" Margin="0 5" />
        <Button Name="MedalButton" Access="Public" Text="Видати Медаль" StyleClasses="OpenBoth" />
        <Button Name="TacticalMapButton" Access="Public" Text="Тактична мапа" StyleClasses="OpenBoth" />
        <Button Name="OverwatchButton" Access="Public" Text="Система Спостереження" StyleClasses="OpenBoth" />
        <cc:HSeparator Color="#4972A1" Margin="0 5" />
        <Button Name="EchoButton" Access="Public" Text="Створити загін Ехо" StyleClasses="OpenBoth" />
        <cc:HSeparator Name="EchoSeparator" Access="Public" Color="#4972A1" Margin="0 5" />
        <BoxContainer Name="LandingZonesSection" Access="Public" Orientation="Vertical">
            <Label Text="Призначити основну Посадкову Зону" />
            <BoxContainer Name="LandingZonesContainer" Access="Public" Orientation="Vertical" />
            <cc:HSeparator Color="#4972A1" Margin="0 5" />
        </BoxContainer>
        <TextEdit Name="Text" Access="Public" HorizontalExpand="True" VerticalExpand="True" />
        <Button Name="Send" Access="Public" Text="Відправити" HorizontalExpand="True" />
    </BoxContainer>
</controls:MarineCommunicationsComputerWindow>
