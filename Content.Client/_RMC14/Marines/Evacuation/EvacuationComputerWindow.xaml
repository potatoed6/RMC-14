<controls:EvacuationComputerWindow
    xmlns="https://spacestation14.io"
    xmlns:controls="clr-namespace:Content.Client._RMC14.Marines.Evacuation"
    xmlns:ui="clr-namespace:Content.Client._RMC14.UserInterface"
    Title="Керуванням Подом Евакуації">
    <BoxContainer Orientation="Vertical">
        <RichTextLabel Text="[bold]Інформаціний дісплей[/bold]" />
        <ui:BlueHorizontalSeparator />
        <Label Name="StatusLabel" Access="Public" Text="Статус пода евакуації: ЕВАКУАЦІЯ НЕ РОЗПОЧАТА" />
        <Label Name="HatchLabel" Access="Public" Text="Стикувальний люк: НЕ ЗАЧИНЕНИЙ" />
        <RichTextLabel Text="[bold]Керування подом[/bold]" Margin="0 10 0 0" />
        <ui:BlueHorizontalSeparator />
        <Button Name="DoorButton" Access="Public" Text="Відкрити двері" StyleClasses="OpenBoth" />
        <Button Name="EjectButton" Access="Public" Text="Ручне відстикування" StyleClasses="OpenBoth" />
        <Button Name="DelayButton" Access="Public" Text="Відкласти запуск" StyleClasses="OpenBoth" />
    </BoxContainer>
</controls:EvacuationComputerWindow>
