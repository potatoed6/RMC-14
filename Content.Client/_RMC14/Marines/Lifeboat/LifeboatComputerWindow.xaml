<controls:LifeboatComputerWindow
    xmlns="https://spacestation14.io"
    xmlns:controls="clr-namespace:Content.Client._RMC14.Marines.Lifeboat"
    Title="Консоль керування лодкою Евакуації" MinSize="400 200">
    <BoxContainer Orientation="Vertical">
        <Label Text="Запустити лодку евакуації?" />
        <BoxContainer Orientation="Horizontal">
            <Control HorizontalExpand="True" />
            <Button Name="EmergencyLaunchButton" Access="Public" Text="Аварійний Запуск"
                    StyleClasses="OpenBoth" HorizontalExpand="True" SizeFlagsStretchRatio="3"
                    Margin="0 2" />
            <Control HorizontalExpand="True" />
        </BoxContainer>
        <BoxContainer Orientation="Horizontal">
            <Control HorizontalExpand="True" />
            <Button Name="NoButton" Access="Public" Text="Ні"
                    StyleClasses="OpenBoth" HorizontalExpand="True" SizeFlagsStretchRatio="3"
                    Margin="0 2" />
            <Control HorizontalExpand="True" />
        </BoxContainer>
        <BoxContainer Orientation="Horizontal">
            <Control HorizontalExpand="True" />
            <Button Name="YesButton" Access="Public" Text="Так"
                    StyleClasses="OpenBoth" HorizontalExpand="True" SizeFlagsStretchRatio="3"
                    Margin="0 2" />
            <Control HorizontalExpand="True" />
        </BoxContainer>
    </BoxContainer>
</controls:LifeboatComputerWindow>
